    <div class="row">

        <div class="col-md-12">
            <div class="col-md-12" style="height:100%;width:100%;">
                <div id="demo1" class="carousel slide" data-ride="carousel" data-interval="15000">
                    <!-- Indicators -->
                    <ul class="carousel-indicators">
                        <li data-target="#demo1" data-slide-to="0" class="active" style="background-color:#b45858;"></li>
                        <li data-target="#demo1" data-slide-to="1" style="background-color:#b45858;"></li>
                    </ul>
                    <!-- The slideshow -->
                    <div class="carousel-inner">
                        <div class="carousel-item active" >
                            <div id="Firefighterslide" class="card shadow p-3 mb-5 bg-white rounded  ">
                                <h1 class="titlestyle">TRAINED FIRE FIGHTERS AVAILABILE IN FACTORY TODAY</h1>
                                <div class="table100 ver1" style="border:outset; background-color:ivory">
                                    <table id="tblFireFighters" class="tblstyle table-striped" >

                                        <thead class="">
                                            <tr>
                                                <th>S.NO</th>
                                                <th>NAME</th>
                                                <th>DEPARTMENT</th>
                                                <th>FIRE FIGHTERS</th>


                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{

                                                foreach (var any in Model.WUVTabledatafromdbFireFighters)
                                                {
                                                    <tr>
                                                        <td class="paddingleftcolumn">@Html.DisplayFor(li => any.FFsno)</td>
                                                        <td class="paddingleftcolumn">@Html.DisplayFor(li => any.FFname)</td>
                                                        <td class="paddingleftcolumn">@Html.DisplayFor(li => any.FFdepartment)</td>
                                                        <td class="">

                                                            @{
                                                                if ((any.FFpunchcount) == "out")
                                                                {

                                                                    <img class="imgsize" id="RedImage" src="~/style/Image/Redbulb.jpeg" />
                                                                }
                                                                else
                                                                {

                                                                    <img class="imgsize" id="GreenImage" src="~/style/Image/Greenbulb.jpg" />
                                                                }
                                                            }

                                                        </td>


                                                    </tr>
                                                                }

                                            }
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item" >
                            <div id="Fireaiderslide" class="card shadow p-3 mb-5 bg-white rounded  ">
                                <h1 class="titlestyle">TRAINED FIRST AIDERS AVAILABILE IN FACTORY TODAY</h1>
                                <div class="table100 ver1" style="border:outset; background-color:ivory">
                                    <table id="tblFireAiders" class="tblstyle table-striped" >
                                        <thead>
                                            <tr>
                                                <th>S.NO</th>
                                                <th>NAME</th>
                                                <th>DEPARTMENT</th>
                                                <th>FIRE AIDERS</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{

                                                foreach (var any in Model.WUVTabledatafromdbFireAiders)
                                                {
                                                    <tr>
                                                        <td class="paddingleftcolumn">@Html.DisplayFor(li => any.FAsno)</td>
                                                        <td class="paddingleftcolumn">@Html.DisplayFor(li => any.FAname)</td>
                                                        <td class="paddingleftcolumn">@Html.DisplayFor(li => any.FAdepartment)</td>
                                                        <td class="">

                                                            @{
